generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model user {
  id        String   @id @unique
  email     String   @unique @db.VarChar
  password  String   @db.VarChar
  firstname String   @db.VarChar
  lastname  String   @db.VarChar
}
